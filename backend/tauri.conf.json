{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vrm2sl",
  "mainBinaryName": "vrm2sl",
  "version": "0.0.0",
  "identifier": "dev.logue.vrm2sl",
  "build": {
    "beforeDevCommand": "pnpm --dir frontend dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm --dir frontend build-only",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri Vue3 App",
        "width": 1280,
        "height": 720,
        "minWidth": 720,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": false
  },
  "bundle": {
    "publisher": "Logue",
    "active": true,
    "category": "Utility",
    "shortDescription": "VRM to Second Life glTF converter",
    "longDescription": "Convert VRoid VRM avatars to Second Life-ready glTF (.gdb)",
    "targets": [
      "dmg",
      "msi",
      "deb",
      "rpm",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "bundleName": "vrm2sl",
      "minimumSystemVersion": "11.0"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "displayLanguageSelector": true
      }
    }
  }
}